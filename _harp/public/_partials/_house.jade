article.house(id='#{slug}')
  .container
    .row
      .col-xs-12
        .house-byline
          h3 #{byline}
        .house-carousel
          each image in images
            div.house-carousel__image(style='background-image:url("./assets/images/#{image}")')

        if facebook != '' || gmap != ''
          ul.house-externals
            if facebook != ''
              li
                a.house-externals__facebook(href='#{facebook}') Facebook
            if gmap != ''
              li
                a.house-externals__gmap(href='#{gmap}') Google Maps

        h2 #{name}

        if address != ''
          .house-address
            p #{address}

        if contacts
          .house-contact
            each contact in contacts
              if contact.type == 'phone'
                p #{contact.value}
              if contact.type == 'email'
                p
                  a(href='mailto:#{contact.value}') #{contact.value}
              if contact.type == 'url'
                p
                  a(href='#{contact.value}') #{contact.display}

        != yield

        .house-externals-gmap
          h3
            hr
            a(href='#{gmap}') vezi #{name} pe google maps
            hr

        a.house-top(href='#top') Sus